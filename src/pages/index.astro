---
import Navbar from "./navbar.astro";
import data from "../data/data.json";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Tunisia Governorates</title>
  </head>
  <body>
    <Navbar />
    
    <main class="main-container">
      <div class="hero">
        <h1 class="hero-title">Governorates of Tunisia</h1>
        <p class="hero-subtitle">Explore demographic and administrative data for each region</p>
      </div>
      
      <div class="cards-container">
        {Object.entries(data).map(([name, info]) => (
          <div class="card" data-aos="fade-up">
            <h2 class="card-title">{name}</h2>
            <div class="card-content">
              <p><span class="label">Population:</span> {info.population.toLocaleString()}</p>
              <p><span class="label">Area:</span> {info.area_km2} kmÂ²</p>
              <p><span class="label">Governor:</span> {info.governor}</p>
            </div>
          </div>
        ))}
      </div>
    </main>
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 0;
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    background-color: var(--bg);
    color: var(--text);
    line-height: 1.6;
  }

  .main-container {
    padding: 0 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .hero {
    text-align: center;
    padding: 4rem 0 2rem;
    margin-bottom: 2rem;
  }

  .hero-title {
    font-size: 2.5rem;
    color: var(--primary);
    margin-bottom: 0.5rem;
    font-weight: 700;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: var(--light-text);
    max-width: 600px;
    margin: 0 auto;
  }

  .cards-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    padding: 1rem 0 4rem;
  }

  .card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
  }

  .card-title {
    text-align: center;
    background-color: var(--primary);
    color: white;
    margin: 0;
    padding: 1.2rem;
    font-size: 1.3rem;
  }

  .card-content {
    padding: 1.5rem;
    flex-grow: 1;
  }

  .label {
    font-weight: 600;
    color: var(--primary);
  }

  .card-footer {
    padding: 0 1.5rem 1.5rem;
  }

  .card-button {
    display: inline-block;
    background-color: var(--secondary);
    color: white;
    padding: 0.6rem 1.2rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 500;
    transition: var(--transition);
  }

  .card-button:hover {
    background-color: var(--accent);
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }
    
    .cards-container {
      grid-template-columns: 1fr;
    }
  }
</style>